      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfOptionFourApp.Views.Pages.ManagerPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Окно менеджера">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Поставщики" Name="SupplierDataBtn" Click="SupplierDataBtn_Click"></Button>
            <Button Content="Список Агентов" Name="AgentsListBtn" Click="AgentsListBtn_Click" Width="200" Margin="0,5"></Button>
            <Button Content="Материалы" Name="MaterialBtn" Click="MaterialBtn_Click"></Button>
            <Button Content="Заявки" Name="ApplicationBtn" Click="ApplicationBtn_Click" Margin="0,5"></Button>
            
        </StackPanel>
    </Grid>
</Page>
